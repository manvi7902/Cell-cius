<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DailyInfo">


    <TextView
        android:id="@+id/profiletv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="375dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/tvday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:text="@string/day"
        android:textColor="#000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_slab_thin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="45dp"
        android:textColor="#000"
        android:textSize="24sp"
        app:fontFamily="@font/roboto_slab" />

    <TextView
        android:id="@+id/tvrecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:text="@string/daily_data"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:fontFamily="@font/roboto_slab" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:fontFamily="@font/roboto_slab" />

    <TextView
        android:id="@+id/tvcondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="45dp"
        android:textColor="#000"
        app:fontFamily="@font/roboto_slab"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvtiptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="45dp"
        android:textColor="#000"
        android:textSize="22sp"
        app:fontFamily="@font/roboto_slab" />

    <TextView
        android:id="@+id/tvtips"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        app:lineHeight="20sp" />

    <Button
        android:id="@+id/btnGraph"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/backgroud"
        android:fontFamily="@font/roboto_slab"
        android:text="YOUR MONTHLY REVIEW"
        android:textColor="#fff" />

    \

</LinearLayout>